pipeline{
    agent {label 'mavennode'}
    tools {maven 'maventool'}
    stages {
        stage ('checkout') {
            steps {
                checkout scm
            }
            
        }
        stage ('Build'){
            steps{
                sh 'mvn clean install'
            }
        }
         stage ('Testing') {
            steps{
                sh "mvn test"
                junit '**/target/surefire-reports/TEST-*.xml'
            }
            post {
                always {
                    cleanWs()
                    archiveArtifacts artifacts: '**/target/newdir/*.jar', allowEmptyArchive: true
                }
                }
            }  
        }
       
    }    
